{
    "configurations": [
    {
        "name": "pre assembler",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/pre_assembler/macro_processor",
        "args": ["${workspaceFolder}/pre_assembler/tests/input_files/maman_example.as", "${workspaceFolder}/pre_assembler/tests/input_files/empty.as", "${workspaceFolder}/pre_assembler/tests/input_files/multiple_macros.as", "${workspaceFolder}/pre_assembler/tests/input_files/repetitive_macro.as"],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    },
    {
        "name": "Assembler",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/assembler",
        "args": ["tests/input_files/maman_cycle_example.as"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    }
    ]
}